{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build opengl file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-std=c++2a",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-framework",
                "OpenGL",
                "-Wno-deprecated"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task for opengl files."
        }
    ],
    "version": "2.0.0"
}